#:kivy 2.0.0
<Button>
    font_size : 32
    background_normal : ''
    background_color : (0,0,1,0.5)

<TextInput>
    background_color: (150/255,150/255,150/255,1)


<Label>
    font_size: 32

<MyLayout>

    #canvas.before:
        #Color:
           # rgba:(1,1,1,1)
        #Rectangle:
         #   size : self.size
         #   pos : self.pos

    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        padding : 10
        spacing : 10

        Label:
            text: 'name'
            background_color: (0,0,1,1)
            canvas.before:
                Color: 
                    rgba : self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            #Text Properties
            color: (0,1,0,1)
            bold : True    
            outline_color: (1,0,0)
            outline_width: 5


        TextInput:
            multiline: False

        Button:
            
            text:'clear'
            background_color: (1,0,0,0.5)