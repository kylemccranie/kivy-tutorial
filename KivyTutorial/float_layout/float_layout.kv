#:kivy 2.0.0
<Button>
    font_size: 32
    size_hint:(0.3,0.3)

<MyLayout>
    FloatLayout:
        size: root.width, root.height

        Button:
            text:"TopLeft"
            #{x,y,top,bottom,left,right} values for x and y etween 0 and 1
            pos_hint : {"x":0, "top":1}
        
        Button:
            text:"Top Right"
            pos_hint :{"x":.7,"top":1}

        Button:
            text:"Center"
            pos_hint:{'x':.35,"top":.65}

        Button:
            text:"Bottom Left"

        Button:
            text:"Bottom Right"
            pos_hint:{"x":.7,"bottom":1}