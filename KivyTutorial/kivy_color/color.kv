#:kivy 2.0.0
<MyGridLayout>

    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols:1
        size : root.width, root.height
    
        GridLayout:
            cols:2

            Label:
                text: "name"
            TextInput:
                id:name
                multiline: False
        
            Label:
                text: "favorite pizza"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "favorite color"
            TextInput:
                id: color
                multiline: False

        Button:
            text: "Submit"
            font_size: 32
            on_press : root.press()
            background_normal : ''
            background_color : (0,0,1,0.5)

