#:kivy 2.0.0
<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size : root.width, root.height
    

        Label:
            id: name_label
            text:"What's your name?"
            font_size : 32
            color:(0,0,0,1)
        
        TextInput:
            id: name_input
            multiine: False
            size_hint: (1,.5)
        
        Button:
            size_hint: (1,.5)
            text:"Submit"
            font_size:32
            on_press : root.press()